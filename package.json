{
  "name": "full-stack-testing",
  "version": "0.0.1",
  "description": "Full. Stack. Testing. (w/ JavaScript)",
  "dependencies": {
    "bootstrap": "3.3.4",
    "express": "4.12.3",
    "jquery": "2.1.3",
    "lodash": "3.6.0",
    "webpack": "1.8.4"
  },
  "devDependencies": {
    "chai": "2.2.0",
    "chai-jq": "0.0.8",
    "coveralls": "2.11.2",
    "gulp": "3.8.11",
    "gulp-connect": "2.2.0",
    "gulp-eslint": "0.9.0",
    "gulp-istanbul": "0.8.1",
    "gulp-jsxcs": "0.1.8",
    "gulp-mocha": "2.0.1",
    "gulp-nodemon": "2.0.2",
    "gulp-rimraf": "0.1.1",
    "gulp-sequence": "0.3.2",
    "gulp-util": "3.0.4",
    "istanbul": "0.3.13",
    "istanbul-instrumenter-loader": "0.1.2",
    "jade": "1.9.2",
    "karma": "0.12.31",
    "karma-chrome-launcher": "0.1.7",
    "karma-coverage": "0.2.7",
    "karma-firefox-launcher": "0.1.4",
    "karma-ie-launcher": "0.1.5",
    "karma-mocha": "0.1.10",
    "karma-phantomjs-launcher": "0.1.4",
    "karma-safari-launcher": "0.1.1",
    "karma-sauce-launcher": "0.2.10",
    "karma-spec-reporter": "0.0.18",
    "marked": "0.3.3",
    "mocha": "2.2.4",
    "phantomjs": "1.9.16",
    "recluster": "0.4.0",
    "rowdy": "0.1.2",
    "selenium-standalone": "4.2.2",
    "sinon": "1.14.1",
    "sinon-chai": "2.7.0",
    "supertest": "0.15.0",
    "wd": "0.3.11"
  },
  "scripts": {
    "test-frontend": "node node_modules/karma/bin/karma start test/client/karma.conf.js",
    "test-backend": "mocha --opts test/server/mocha.opts test/server",
    "test-func": "mocha --opts test/func/mocha.opts test/func",
    "test": "npm run-script test-frontend && npm run-script test-backend && npm run-script test-func",
    "check": "npm run-script build-all && npm run-script test && gulp check",
    "build": "webpack --config webpack.config.js",
    "build-test": "webpack --config webpack.config.test.js",
    "build-cov": "webpack --config webpack.config.coverage.js",
    "build-all": "npm run-script build && npm run-script build-test && npm run-script build-cov",
    "postinstall": "node app/heroku/not-heroku.js || (node app/heroku/install.js && npm run-script build-all)"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FormidableLabs/full-stack-testing"
  },
  "keywords": [
    "test",
    "full stack",
    "selenium",
    "chai",
    "mocha"
  ],
  "author": "Ryan Roemer <ryan.roemer@formidablelabs.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FormidableLabs/full-stack-testing/issues"
  }
}
